<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo6"
    android:paddingBottom="15dp"
    android:paddingLeft="25dp"
    android:paddingRight="5dp"
    android:paddingTop="15dp"
    tools:context=".Main2Activity"
    android:id="@+id/r1">

    <EditText
        android:id="@+id/uid"
        android:layout_width="330dp"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="203dp"
        android:drawableLeft="@drawable/ic_person_pin_black_24dp"
        android:fontFamily="@font/"
        android:hint="    Enter Your ID"
        android:paddingBottom="12dp"
        android:paddingLeft="5dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:textAllCaps="false"
        android:textColor="#2d2727"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/pwd"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:fontFamily="@font/"
        android:hint="    Enter Password"
        android:paddingBottom="12dp"
        android:paddingLeft="5dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:textAllCaps="false"
        android:textColor="#2d2727"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/fpwd"
        android:layout_width="168dp"
        android:layout_height="38dp"
        android:layout_alignBottom="@+id/rm"
        android:layout_alignEnd="@+id/login"
        android:layout_gravity="end"
        android:autoLink="all"
        android:gravity="end"
        android:linksClickable="true"
        android:paddingTop="13dp"
        android:text="@string/forget"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorLink="#000000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="144dp"
        android:background="@drawable/round1"
        android:paddingBottom="12dp"
        android:paddingLeft="20dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:text="LogIn"
        android:textAlignment="center"
        android:textSize="17dp" />

    <CheckBox
        android:id="@+id/rm"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp"
        android:layout_marginStart="0dp"
        android:text="Remember me"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/reg"
        android:layout_marginStart="47dp"
        android:text="Not a member yet?"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/uid"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="97dp"
        android:autoLink="all"
        android:linksClickable="true"
        android:text="@string/string"
        android:textColor="#000000"
        android:textColorLink="#000000"
        android:textStyle="bold" />


</RelativeLayout>